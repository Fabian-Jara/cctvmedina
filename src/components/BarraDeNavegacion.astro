---
import Isotipo from "./Iconos/Isotipo.astro";
import BotonMenu from "./Iconos/BotonMenu.astro";

const paginas = [
  {
    title: "Inicio",
    url: "/#inicio",
  },
  {
    title: "Nosotros",
    url: "/#nosotros",
  },
  {
    title: "Servicios",
    url: "/#servicios",
  },
  {
    title: "Proyectos",
    url: "/#proyectos",
  },
];
---

<nav class="bg-white border-gray-200 fixed w-full z-20 top-0 start-0 border-b">
  <div
    class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-4"
  >
    <a href="/#inicio" class="flex items-center space-x-3 rtl:space-x-reverse">
      <Isotipo class="h-14" />
      <span class="self-center text-2xl font-semibold whitespace-nowrap"
        >CCTV Medina</span
      >
    </a>
    <button
      data-collapse-toggle="barra-de-navegacion"
      type="button"
      class="inline-flex items-center p-2 w-10 h-10 justify-center text-sm text-gray-700 rounded-lg md:hidden hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200"
      aria-controls="barra-de-navegacion"
      aria-expanded="false"
    >
      <span class="sr-only">Abrir menu</span>
      <BotonMenu class="w-5 h-5" />
    </button>
    <div class="hidden w-full md:block md:w-auto" id="barra-de-navegacion">
      <ul
        class="font-medium text-[14pt] flex flex-col p-4 md:p-0 mt-4 border border-gray-100 rounded-lg bg-gray-50 md:flex-row md:space-x-8 rtl:space-x-reverse md:mt-0 md:border-0 md:bg-white"
      >
        {
          paginas.map((pagina) => (
            <li>
              <a
                aria-label={pagina.title}
                href={pagina.url}
                class="block py-2 px-3 text-gray-900 rounded hover:bg-gray-100 md:hover:bg-transparent md:border-0 md:hover:text-red-500 md:p-0"
              >
                {pagina.title}
              </a>
            </li>
          ))
        }
      </ul>
    </div>
  </div>
</nav>
